/* pages/index/index.wxss */

/* 搜索框 */
.searchArea {
  margin-top: -1rpx;
  z-index: 9999;
  position: fixed;
  width: 100%;
  height: 160rpx;
  background-color: white;
}

.search {
  margin: 35rpx 8%;
  padding: 20rpx 25rpx;
  width: 78%;
  border-radius: 60rpx;
  background-color: white;
  box-shadow: 5rpx 5rpx 10rpx 5rpx rgb(235, 226, 226);
}

.indexContainer .search text {
  font-size: 35rpx;
  line-height: 50rpx;
  color: #989898;
  margin-right: 10rpx;
}

/* 首页图样式 */
.indexContainer .indexImage {
  padding-top: 160rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.indexContainer .indexImage image {
  width: 90%;
  height: 160rpx;
  text-align: center;
  border-radius: 20rpx;
}

/* 通知导航区样式 */
.indexContainer .notifyNav {
  margin: 20rpx 3%;
  display: flex;
}

.indexContainer .notifyNav .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.indexContainer .notifyNav .navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 20px;
  background: radial-gradient(circle, #99b2f1 1%, #7698fa 75%, #829afb 100%);
  margin: 20rpx 0;
}

.indexContainer .notifyNav .navItem text {
  font-size: 30rpx;
}

/* 分割线 */
.indexContainer .line {
  width: 100%;
  height: 20rpx;
  background-color: #f6f6f6;
}

/* 医院信息区 */
.indexContainer .hospitalInfo {
  position: relative;
}

.indexContainer .hospitalInfo .header {
  font-size: 37rpx;
  line-height: 80rpx;
  padding: 0 5%;
}

.indexContainer .hospitalInfo .header .area {
  width: 120rpx;
}

.indexContainer .hospitalInfo .header .area .iconfont {
  font-size: 12px;
  color: #dddddd;
  margin-left: 10rpx;
}

.filterRotate {
  transform: rotate(180deg);
  -webkit-transform: rotate(180deg);
  transition: transform .5s;
}

.indexContainer .hospitalInfo .inner {
  margin: 0 5%;
}

.indexContainer .hospitalInfo .inner image {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: 3.5%;
  margin-left: 0.3%;
}

.indexContainer .hospitalInfo .inner .avatar .avatarBackground {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: 3%;
  margin-left: 0.5%;
  box-shadow: 0 0 20rpx 15rpx #f7f7f7;
}

.indexContainer .hospitalInfo .inner .hospital {
  width: 520rpx;
  float: right;
}

.indexContainer .hospitalInfo .inner .hospital .hospName {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.indexContainer .hospitalInfo .inner .hospital .hospitalName {
  font-size: 42rpx;
  font-weight: bold;
  line-height: 120rpx;
}

.indexContainer .hospitalInfo .inner .hospital .hospitalOtherInfo {
  font-size: 30rpx;
  color: #999999;
}

.filter {
  position: absolute;
  width: 100%;
  height: 100rpx;
  background-color: rgba(122, 122, 122, .5);
}

.loading {
  position: relative;
  width: 100%;
  height: 100rpx;
}

.loadingDown {
  margin-top: 30rpx;
  padding-bottom: 50rpx;
}

.loadingDown .left {
  margin-top: 20rpx;
  margin-left: 30%;
  float: left;
  width: 50rpx;
  height: 1rpx;
  background: linear-gradient(to right, #e1e9ee, #5c729c);
}

.loadingDown .right {
  margin-top: 20rpx;
  margin-right: 30%;
  float: right;
  width: 50rpx;
  height: 1rpx;
  background: linear-gradient(to left, #e1e9ee, #5c729c);
}

.loadingDown .content {
  font-size: 25rpx;
  line-height: 25rpx;
  color: #999999;
  padding-left: 45rpx;
  margin-top: 10rpx;
}