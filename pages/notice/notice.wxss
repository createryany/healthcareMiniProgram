/* pages/check/check.wxss */
.noticeContainer .header {
  width: 100%;
  height: 140rpx;
  background-color: #9cc0fe;
  padding-top: 10rpx;
}

.noticeContainer .header text {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 30rpx;
  line-height: 30rpx;
}
.noticeContainer .body {
  margin: -13% 0 0;
  padding: 5%;
  background-color: white;
}

.line {
  width: 100%;
  height: 2rpx;
  margin: 20rpx 0;
  background-color: #f6f6f6;
}

.title {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 40rpx;
  margin-top: -3%;
  color: #333;
}

.notice .inner {
  margin-top: 20rpx;
}

.notice .inner text{
  font-size: 30rpx;
  line-height: 30rpx;
}

.notice .inner .iconfont {
  float: right;
  margin-top: 1.5%;
  margin-left: auto;
}

.notice .date {
  font-size: 25rpx;
  color: rgba(0,0,0,0.3);
}