        </view>
        <text class="date">2023年1月12日</text>
      </view>
      <view class="line"></view>
    </view>

    <view data-index="3" bindtap="noticeDetail">
      <view class="notice">
        <view class="inner">
          <text>郑州协和医院新增内科医师通知</text>
          <text class="iconfont icon-xiayiyeqianjinchakangengduo"></text>
        </view>
