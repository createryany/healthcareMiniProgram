          <text class="iconfont icon-xiayiyeqianjinchakangengduo"></text>
        </view>
        <text class="date">2023年1月10日</text>
      </view>
      <view class="line"></view>
    </view>

    <view data-index="5" bindtap="noticeDetail">
      <view class="notice">
        <view class="inner">
          <text>郑州西亚斯学院第一附属医院停诊通知</text>
          <text class="iconfont icon-xiayiyeqianjinchakangengduo"></text>
        </view>
        <text class="date">2023年1月10日</text>
      </view>
      <view class="line"></view>
    </view>
  </view>
</view>

<i-toast id="toast" />
<!-- 绑定提示 -->
<i-modal i-class="tips" title="healthcare平台提示" visible="{{ visibleTips }}" actions="{{ actionsTips }}" bind:click="handleCloseTips">
