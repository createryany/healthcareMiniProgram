.commonContainer {
  height: 100%;
}

.commonContainer .header {
  width: 100%;
  height: 140rpx;
  background-color: #9cc0fe;
  padding-top: 10rpx;
}

.commonContainer .header text {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 30rpx;
  line-height: 30rpx;
}
.commonContainer .body {
  height: 100%;
  margin: -13% 0 0;
  padding-top: 30rpx;
  padding-left: 10rpx;
  background-color: #fff;
}

.title {
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.content {
  font-size: 25rpx;
  line-height: 25rpx;
  color: #686868;
  margin-bottom: 25rpx;
}