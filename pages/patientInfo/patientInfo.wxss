/* pages/patientInfo/patientInfo.wxss */

page {
  background-color: #f6f6f6;
}

.patientContainer .header {
  position: fixed;
  width: 100%;
  height: 3%;
  background-color: #9cc0fe;
  padding-top: 10rpx;
  margin-top: -1rpx;
  z-index: 99999;
}

.patientContainer .header text {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 30rpx;
  line-height: 30rpx;
}

.patientContainer .headerLine {
  width: 100%;
  height: 50rpx;
}

.patientContainer .body {
  padding: 5%;
  background-color: #f6f6f6;
}

.spinContainer {
  position: fixed;
  top:0;
  left:0;
  right: 0;
  bottom: 0;
}

.patient {
  position: relative;
}

.patient .visitor {
  position: absolute;
  right: 0;
  top: 10px;
  width: 50%;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 30rpx;
}

.patient .text {
  font-size: 25rpx;
  color: #333;
}

.patient .order {
  position: absolute;
  left: 0;
  top: 10px;
  width: 50%;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 30rpx;
}

.patient .iconfont {
  font-size: 50rpx;
  color: #3e84f6;
}

.content {
  position: relative;
  width: 100%;
  height: 25%;
  margin-top: 20rpx;
  background-color: white;
  border-radius: 30rpx;
  padding-bottom: 100rpx;
}

.info {
  padding-top: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  color: red;
}

.toLogin {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 50rpx;
  color: white;
  margin-top: 30rpx;
  background-color: #4d80fd;
}

.line {
  width: 100%;
  height: 160rpx;
}

.orderMes {
  position: relative;
  width: 100%;
  height: 250rpx;
  margin-top: 20rpx;
  background-color: white;
  border-radius: 30rpx;
}

.orderMes .orderContent {
  padding: 4%;
}

.orderMes .orderContent .orderItem {
  position: relative;
}

.orderMes .orderContent .orderItem .orderHosp .hospName {
  display: inline-block;
  width: 300rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.hospName .name {
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
  color: #141414;
}

.orderMes .orderContent .orderItem .orderHosp .iconfont {
  color: #999999;
}

.orderMes .orderContent .orderItem .orderHosp .orderStatus {
  position: absolute;
  right: 0;
  color: #657ac8;
}

.orderMes .orderContent .orderItem .orderHosp .depName {
  margin-top: 15rpx;
  font-size: 25rpx;
  color: #657ac8;
}

.orderMes .orderContent .orderItem .orderHosp .patientInfo {
  font-size: 35rpx;
  font-weight: bold;
  color: #657ac8;
}

.orderMes .orderContent .orderItem .orderHosp .amount {
  float: right;
  margin-top: -40rpx;
  font-size: 30rpx;
  color: #657ac8;
}

.orderMes .orderContent .orderItem .orderHosp .amount .iconfont {
  font-size: 30rpx;
  color: #657ac8;
  line-height: 30rpx;
  font-weight: bold;
}

.orderMes .orderContent .orderItem .orderHosp .detail {
  position: absolute;
  right: 0;
  margin-top: 15rpx;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #141414;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 5rpx 10rpx;
  border: 1rpx solid #d3d3d3;
  border-radius: 30rpx;
}

.changePage {
  margin-top: 20rpx;
}

.numInfo {
  position: absolute;
  left: 10rpx;
  top: 70rpx;
  margin-left: 10rpx;
  font-size: 25rpx;
  line-height: 25rpx;
  font-weight: bold;
  color: #666;
}

.patientOrder {
  position: absolute;
  left: 10rpx;
  top: 70rpx;
  margin-left: 10rpx;
  font-size: 25rpx;
  line-height: 25rpx;
  font-weight: bold;
  color: #666;
}

.patientOrder .name {
  font-weight: normal;
  color: #657ac8;
  margin: 0 20rpx;
}

.patientOrder .iconfont {
  font-size: 25rpx;
  line-height: 25rpx;
}

.patientClick {
  position: absolute;
  left: 19%;
  top: 5%;
  width: 40%;
  height: 40rpx;
  z-index: 99999;
}

.orderNumInfo {
  position: absolute;
  right: 10rpx;
  top: 70rpx;
  margin-right: 10rpx;
  font-size: 25rpx;
  line-height: 25rpx;
  font-weight: bold;
  color: #666;
}

.patientMes {
  width: 100%;
  margin-top: 30rpx;
  background-color: white;
  border-radius: 30rpx;
}

.patientMes .patientHeader {
  padding: 4% 6%;
}

.patientMes .patientHeader .patientName {
  float: left;
}

.patientMes .patientHeader .patientDetail {
  float: right;
  margin-top: 30rpx;
  margin-right: -18rpx;
}

.patientMes .patientHeader .patientName .name {
  font-size: 40rpx;
  line-height: 40rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.patientMes .patientHeader .patientName .type {
  font-size: 25rpx;
  line-height: 25rpx;
  color: #999;
}

.patientMes .patientHeader .patientDetail text {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #999;
}

.divider {
  width: 90%;
  margin-top: 80rpx;
  margin-left: 5%;
  height: 1rpx;
  background-color: #f5f5f5;
}

.patientMes .patientContent .patientMessage {
  width: 86%;
  margin-left: 4%;
  margin-top: 30rpx;
  padding: 3%;
  height: 90rpx;
  background-color: #89c5ea;
  border-radius: 30rpx;
}

.patientMes .patientContent .patientMessage .own {
  float: left;
  width: 12%;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #999;
  padding: 3%;
}

.patientMes .patientContent .patientMessage .own .ownText {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15% 0;
  background-color: white;
  border-radius: 10rpx;
}

.patientMes .patientContent .patientMessage .message {
  margin-left: 120rpx;
}

.patientMes .patientContent .patientMessage .message .typeNo {
  font-size: 35rpx;
  line-height: 35rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.patientMes .patientContent .patientMessage .message .typeNum {
  font-size: 25rpx;
  line-height: 25rpx;
  color: white;
}

.patientMes .patientContent .patientMessage .unBind {
  float: right;
  margin-top: 35rpx;
  margin-right: 10rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: white;
}

.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.footer .bindSocialCard {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333;
  padding: 10rpx;
}

.addPatient {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 120rpx;
  margin-top: 30rpx;
  background-color: white;
  border-radius: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #6681d0;
}

.addPatient .addPatientText {
  margin-top: 45rpx;
}

.noList {
  position: relative;
  width: 100%;
  height: 250rpx;
  margin-top: 20rpx;
  background-color: white;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.noList .iconfont {
  margin-top: 50rpx;
  font-size: 100rpx;
  line-height: 100rpx;
  color: #d8b2fb;
}

.noList .noOrderListText {
  margin-top: 10rpx;
  font-size: 25rpx;
  line-height: 25rpx;
  color: #999;
}